# http://editorconfig.org

[*]
charset = utf-8
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 4
trim_trailing_whitespace = true
curly_bracket_next_line = false

[{*.bash,*.sh,*.zsh}]
indent_size = 2
tab_width = 2

[{*.json,*.yaml,*.yml}]
indent_size = 2
